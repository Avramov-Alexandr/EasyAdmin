{% extends '@EasyAdmin/crud/index.html.twig' %}

{% block content_title %}
    Search Results for "{{ query }}"
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h2>{{ results|length }} result(s) found</h2>

        {% if results is empty %}
            <p>No results found for "{{ query }}"</p>
        {% else %}
            <ul>
                {% for result in results %}
                    <li>
                        <strong>{{ result.name }}</strong> â€” {{ result.clientId }} | {{ result.smtpHost }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
