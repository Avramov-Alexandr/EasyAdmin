{% extends '@EasyAdmin/crud/index.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block content %}
    <div style="display: flex; flex-direction: column; align-items: center;">
    <div style="width: 100%; margin-bottom: 20px;">
        {% include 'components/search_domain_form.html.twig' %}
        {{ parent() }}
    </div>
    </div>

    <!-- Обёртка для строки поиска -->
    <div class="d-flex flex-column align-items-start mt-3">
        <div class="w-100 d-flex justify-content-between align-items-center">
            <h5 class="mb-3">Results</h5>
        </div>
        <div class="search-container w-100">
            <form method="get" action="{{ path('admin_domain_search') }}">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search domains..." value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}